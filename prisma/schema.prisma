generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("MEIGETSUID_DATABASE_URL")
}

model masteruserrecord {
    ID String @db.VarChar(13) @unique @id
    UserID String @db.VarChar(20) @unique
    UserName String @db.Text
    MailAddress String @db.VarChar(65535) @unique
    Password String @db.VarChar(128)
    AccountType Int @db.UnsignedTinyInt
    CreatedAt DateTime @default(now())
}

model application {
    AppID String @db.VarChar(32) @unique @id
    AppName String @db.Text
    DeveloperID String @db.VarChar(13)
}

model virtualid {
    VirtualID String @db.VarChar(32) @unique @id
    ID String @db.VarChar(13)
    AppID String @db.VarChar(32)
}

model accesstoken {
    Token String @db.VarChar(128) @unique @id
    VirtualID String @db.VarChar(32)
    Scopes String @db.Text
    ExpiredAt DateTime @db.DateTime()
}

model refreshtoken {
    Token String @db.VarChar(128) @unique @id
    VirtualID String @db.VarChar(32)
    Scopes String @db.Text
    ExpiredAt DateTime @db.DateTime()
}
